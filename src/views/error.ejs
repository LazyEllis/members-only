<% const ERRORS = { 401: "Unauthorized", 403: "Forbidden", 404: "Not Found"} %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= ERRORS[statusCode] || "Error" %> | Members Only</title>
  <%- include("partials/styles", { style: "error" }) %>
</head>
<body>
  <main>
    <div class="error">
      <p class="code"><%= statusCode %></p>
      <h1 class="message"><%= message %></h1>
      <a href="/" class="button action">Go back home</a>
    </div>
  </main>
</body>
</html>